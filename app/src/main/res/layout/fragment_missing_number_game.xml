<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".game_frames.MissingNumberGameFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp">

        <TextView
            android:id="@+id/txt_missing_number_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/str_game_missing_number_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_missing_number_equation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="text2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_missing_number_header" />

        <Button
            android:id="@+id/btn_option_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text=""
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_option_two"
            app:layout_constraintTop_toBottomOf="@+id/txt_missing_number_equation" />

        <Button
            android:id="@+id/btn_option_two"
            android:layout_width="0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btn_option_one"
            app:layout_constraintTop_toBottomOf="@+id/txt_missing_number_equation" />

        <Button
            android:id="@+id/btn_option_three"
            android:layout_width="0"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/btn_option_one"
            app:layout_constraintEnd_toEndOf="@+id/btn_option_one"
            app:layout_constraintTop_toBottomOf="@+id/btn_option_one" />

        <Button
            android:id="@+id/btn_option_four"
            android:layout_width="0"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/btn_option_two"
            app:layout_constraintEnd_toEndOf="@+id/btn_option_two"
            app:layout_constraintTop_toBottomOf="@id/btn_option_two" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>